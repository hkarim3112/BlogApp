<%= render partial: 'posts/back' %>

<h3>Suggestion</h3>
<%= form_for [@commentable, @comment] do |form|%>
  <div class="field">
    <%= form.trix_editor :content, required: true %>
  </div>
  <div class="field">
    <%= form.hidden_field :suggestion, value: true %>
  </div>
  <div class="actions">
    <%= form.submit "Create Suggestion" %>
  </div>
<% end %>
