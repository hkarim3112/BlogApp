<%= post.title %>
<%= post.content %>
<%= link_to 'Show', post %>

<% if post.pending? %>
  <%= link_to 'Publish', publish_path(:post => post)%>
<% elsif post.published? %>
  <%= link_to 'Unpublish', unpublish_path(:post => post)%>
<% end %>

<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<br>
